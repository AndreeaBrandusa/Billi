@using BilliWebApp.Models.Motorcycle
@model AddMotorcycle

<form asp-controller="Motorcycle" asp-action="AddProduct" method="post" enctype="multipart/form-data">
    <div>
        <label for="Name">Name:</label>
        <input asp-for="Name" type="text" name="Name">
    </div>
    <div>
        <label for="Brand">Brand:</label>
        <input asp-for="Brand" type="text" name="Brand">
    </div>
    <div>
        <label for="Quantity">Quantity:</label>
        <input asp-for="Quantity" type="number" name="Quantity">
    </div>
    <div>
        <label for="Price">Price:</label>
        <input asp-for="Price" type="number" name="Price">
    </div>
    <div>
        <label for="Details">Details:</label>
        <input asp-for="Details" type="text" name="Details">
    </div>
    <div>
        <input type="file" multiple="multiple" asp-for="Img"/> 
    </div>

    <button type="submit" class="btn">Add Product</button>
</form>

